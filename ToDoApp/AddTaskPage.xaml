<Page x:Class="ToDoApp.AddTaskPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ToDoApp"
      xmlns:UserControls="clr-namespace:ToDoApp.View.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddTaskPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Rectangle Fill="IndianRed" Grid.Row="0"/>
        <TextBlock Text="Todo app" Foreground="WhiteSmoke" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" FontWeight="Medium" />


        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="80*"/>
            </Grid.ColumnDefinitions>
            <UserControls:LeftMenuBar Grid.Column="0"/>

            <!-- Main content -->

            <Grid Grid.Column="1" Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="85*"/>
                </Grid.RowDefinitions>

                <TextBox Grid.Row="0" Text="Add a new task" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30" Margin="0, 5, 0, 0" BorderThickness="0" FontWeight="Medium"/>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="60*"/>
                        <ColumnDefinition Width="20*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel  Grid.Column="1">
                        <Label Content="Name of the task" FontSize="15" FontWeight="Medium" />
                        <TextBox BorderThickness="2" x:Name="TaskNameAdd"/>

                        <Button Content="Add task" Width="242" Margin="20" Background="IndianRed" Foreground="White" FontWeight="Medium" Click="OnAddBtn_Click" Height="31" FontSize="16"/>

                    </StackPanel>

                </Grid>
                <Image x:Name="EmtpyTaskWarning" HorizontalAlignment="Left" Height="232" Margin="146,75,0,0" Grid.Row="1" VerticalAlignment="Top" Width="367" Source="/Images/Warning Message Empty Tasks.png" Visibility="Collapsed"/>
            </Grid>



        </Grid>
    </Grid>
</Page>
